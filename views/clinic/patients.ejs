<%- include('../partials/header.ejs')%>
<section>
  <div class="content" style="margin: 20px;">
    <div class="col mb-100">
      <div class="event-heading">
        <h3 class="dis-in-bl">List of Patients</h3>
      </div>
      <%if(patients.length) { %>
      <table>
        <tr>
          <th>Patient ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Patient's Address</th>
          <th>Age</th>
          <th>Insurance No</th>
          <th>Insurance Type</th>
          <th>Insurer Name</th>
          <th
          >Action</th>
        </tr>
        <% patients.forEach(patient => { %>
        <tr>
          <td><%= patient.patient_id %></td>
          <td><%= patient.first_name %></td>
          <td><%= patient.last_name %></td>
          <td><%= patient.address %></td>
          <td><%= patient.age %></td>
          <td><%= patient.insurance_number %></td>
          <td><%= patient.insurance_type %></td>
          <td><%= patient.insurer_name %></td>
          <td>
            <form style="float: left">
              <button
                class="update-btn"
                type="submit"
                formmethod="GET"
                formaction="/edit-patient-details/<%= patient.patient_id %>"
              >
                Edit
              </button>
            </form>
          </td>
        </tr>
        <% })%>
      </table>
      <% } else { %>
      <p style="margin: 20px auto; width: 95%">
        There are no Patients to display.
      </p>
      <% } %>
    </div>
  </div>
</section>
